<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal que força o modo claro e usa MaterialComponents -->
    <style name="Theme.VetGestLink" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cores primárias -->
        <item name="colorPrimary">#15803d</item>
        <item name="colorPrimaryVariant">#14532d</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#16a34a</item>

        <!-- Força o tema claro sempre -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Background sempre branco -->
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:colorBackground">#FFFFFF</item>

        <!-- Cores de texto fixas -->
        <item name="android:textColorPrimary">#111827</item>
        <item name="android:textColorSecondary">#4b5563</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#f0fdf4</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Surface / material attributes (opcional) -->
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#111827</item>
    </style>

    <!-- Base alias para compatibilidade noturna -->
    <style name="Base.Theme.VetGestLink" parent="Theme.MaterialComponents.DayNight.NoActionBar" />
</resources>