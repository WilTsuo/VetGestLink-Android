<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Logo Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvLogo"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:cardCornerRadius="64dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_vetgestlink"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:contentDescription="@string/logo_description" />

        </androidx.cardview.widget.CardView>

        <!-- App Title -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textColor="#1e7a4e"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cvLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- App Subtitle -->
        <TextView
            android:id="@+id/tvAppSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_subtitle"
            android:textSize="14sp"
            android:textColor="#16a34a"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/tvAppName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Username Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/username_hint"
            app:startIconDrawable="@drawable/ic_user"
            app:startIconTint="#9ca3af"
            app:hintTextColor="#6b7280"
            app:boxStrokeColor="#d1d5db"
            app:boxStrokeErrorColor="#ef4444"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:background="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tvAppSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="text"
                android:textSize="16sp"
                android:textColor="#111827"
                android:textColorHint="#9ca3af"
                android:background="#FFFFFF"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                tools:ignore="RtlSymmetry"
                tools:text="veterinario" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="#9ca3af"
            app:endIconMode="password_toggle"
            app:endIconTint="#9ca3af"
            app:hintTextColor="#6b7280"
            app:boxStrokeColor="#d1d5db"
            app:boxStrokeErrorColor="#ef4444"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:background="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tilUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColor="#111827"
                android:textColorHint="#9ca3af"
                android:background="#FFFFFF"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                tools:ignore="RtlSymmetry"
                tools:text="••••••••" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Remember Me Checkbox -->
        <CheckBox
            android:id="@+id/cbRememberMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remember_me"
            android:textSize="14sp"
            android:textColor="#4b5563"
            android:buttonTint="#16a34a"
            app:layout_constraintTop_toBottomOf="@id/tilPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Forgot Password Link -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textSize="14sp"
            android:textColor="#15803d"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tilPassword"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/login_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            app:backgroundTint="#15803d"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/cbRememberMe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Divider Left -->
        <View
            android:id="@+id/dividerLeft"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#e5e7eb"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvOr"
            app:layout_constraintBottom_toBottomOf="@id/tvOr"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp" />

        <!-- Or Text -->
        <TextView
            android:id="@+id/tvOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:textSize="14sp"
            android:textColor="#6b7280"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Divider Right -->
        <View
            android:id="@+id/dividerRight"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#e5e7eb"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            app:layout_constraintStart_toEndOf="@id/tvOr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvOr"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp" />

        <!-- No Account Text -->
        <TextView
            android:id="@+id/tvNoAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_account"
            android:textSize="14sp"
            android:textColor="#4b5563"
            app:layout_constraintTop_toBottomOf="@id/tvOr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvSignUp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="4dp" />

        <!-- Sign Up Link -->
        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_access"
            android:textSize="14sp"
            android:textColor="#15803d"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@id/tvNoAccount"
            app:layout_constraintBottom_toBottomOf="@id/tvNoAccount"
            app:layout_constraintStart_toEndOf="@id/tvNoAccount"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Copyright Text -->
        <TextView
            android:id="@+id/tvCopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copyright"
            android:textSize="12sp"
            android:textColor="#6b7280"
            app:layout_constraintTop_toBottomOf="@id/tvNoAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- All Rights Reserved Text -->
        <TextView
            android:id="@+id/tvRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_rights_reserved"
            android:textSize="12sp"
            android:textColor="#6b7280"
            app:layout_constraintTop_toBottomOf="@id/tvCopyright"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
