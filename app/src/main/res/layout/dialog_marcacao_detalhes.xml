<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvDialogTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalhes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvDialogDataHora"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/lbl_data_hora"
                android:textColor="@color/text_primary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDialogEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textColor="@color/primary_green"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDialogServico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/servico"
            android:textColor="@color/text_tertiary"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_light"
            android:layout_marginBottom="16dp"/>

        <!-- DADOS DO ANIMAL CORRIGIDOS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_nome_paciente"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"/>

        <TextView
            android:id="@+id/tvDialogAnimalNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_nome_paciente"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp"/>

        <!-- Linha 1: Espécie (Esq) e Raça (Dir) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="8dp">

            <!-- Espécie -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_species_label"
                    android:textSize="12sp"
                    android:textColor="@color/text_tertiary"/>

                <TextView
                    android:id="@+id/tvDialogAnimalEspecie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_species_label"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>

            <!-- Raça -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_raca"
                    android:textSize="12sp"
                    android:textColor="@color/text_tertiary"/>

                <TextView
                    android:id="@+id/tvDialogAnimalRaca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_raca"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Linha 2: Género -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_gender_label"
                android:textSize="12sp"
                android:textColor="@color/text_tertiary"/>

            <TextView
                android:id="@+id/tvDialogAnimalGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_gender_label"
                android:textSize="16sp"
                android:textColor="@color/text_primary"/>
        </LinearLayout>

        <!-- Diagnóstico e Botão -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_diagnostico_notas"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"/>

        <TextView
            android:id="@+id/tvDialogDiagnostico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_hifen"
            android:background="#F9FAFB"
            android:padding="12dp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btnCloseDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_fechar"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/primary_green"
            android:textColor="@color/white"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
